#!/bin/bash
set -eu # exit script on errors

echo "go version"
go version

echo "nvm version"
nvm --version

echo "copy spamtube env"
rsync /home/git/www/spamtube/.env .

# build frontend is done with github actions
# echo "> npm run build..."
# cd frontend && npm run build && cd ..

# build backend
echo "> go build..."
cd backend && go build -o ./server && chmod +x ./server && cd ..

export MAIN="backend/server"